pipeline {
    agent any  // Run on any available agent
    
    stages {
        stage('Build') {
            steps {
                echo 'Building...'  // Print a message
                sh 'make build'     // Execute shell command
            }
        }
        
        stage('Test') {
            steps {
                echo 'Running Tests...'
                sh 'make test'      // Execute shell command for testing
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploying...'
                sh 'make deploy'    // Execute shell command for deployment
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed!'  // Always run after the pipeline finishes
        }
        success {
            echo 'Pipeline succeeded!'  // Run if the pipeline succeeds
        }
        failure {
            echo 'Pipeline failed!'     // Run if the pipeline fails
        }
    }
}
